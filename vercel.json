{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/run.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb",
        "includeFiles": ["requirements.txt"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/run",
      "dest": "api/run.py"
    },
    {
      "src": "/api/cron",
      "dest": "api/cron.js"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "CHROME_BIN": "/usr/bin/google-chrome-stable",
    "CHROMEDRIVER_PATH": "/usr/bin/chromedriver"
  }
} 
