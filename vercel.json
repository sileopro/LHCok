{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/run.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb",
        "includeFiles": ["requirements.txt", "scraper.py"],
        "buildCommand": "apt-get update && apt-get install -y chromium-browser chromium-chromedriver"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/run",
      "dest": "api/run.py"
    },
    {
      "src": "/api/cron",
      "dest": "api/cron.js"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "CHROME_BIN": "/usr/bin/chromium-browser",
    "CHROMEDRIVER_PATH": "/usr/bin/chromedriver"
  }
} 