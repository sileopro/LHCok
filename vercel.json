{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/cron",
      "dest": "/api/cron.js"
    }
  ],
  "functions": {
    "api/cron.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "PYTHONPATH": "/var/task"
  }
} 
