{
  "version": 2,
  "builds": [
    {
      "src": "api/cron.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/run.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb",
        "includeFiles": ["requirements.txt"],
        "buildCommand": "pip install playwright && playwright install-deps && playwright install chromium"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/run",
      "dest": "api/run.py"
    },
    {
      "src": "/api/cron",
      "dest": "api/cron.js"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
} 
